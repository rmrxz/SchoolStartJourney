@model IEnumerable<School.ViewModels.ApplicationOrganization.ApplicationUserVM>
@{
    Layout = "_BackstageManagementLayout";
}

<section>
    <section>
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-laptop"></i> 校园启行</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-laptop "></i><a href="index.html">校园启行</a></li>
                    <li><i class="fa fa-home"></i><a href="#">主页</a></li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-3 col-sm-12 col-xs-12">
                <div class="info-box blue-bg">
                    <i class="fa fa-user-o"></i>
                    <div class="count">@ViewBag.Users</div>
                    <div class="title">用户</div>
                </div><!--/.info-box-->
            </div><!--/.col-->

            <div class="col-lg-4 col-md-3 col-sm-12 col-xs-12">
                <div class="info-box brown-bg">
                    <i class="fa fa-users"></i>
                    <div class="count">@ViewBag.AnAssociations</div>
                    <div class="title">社团</div>
                </div><!--/.info-box-->
            </div><!--/.col-->

            <div class="col-lg-4 col-md-3 col-sm-12 col-xs-12">
                <div class="info-box dark-bg">
                    <i class="fa fa-bullseye"></i>
                    <div class="count">@ViewBag.ActivityTerms</div>
                    <div class="title">活动</div>
                </div><!--/.info-box-->
            </div><!--/.col-->
        </div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div class="panel-body progress-panel">
                        <div class="row">
                            <div class="col-lg-8 task-progress pull-left">
                                <h1>最近添加的用户</h1>
                            </div>
                        </div>
                    </div>
                    <table class="table table-hover personal-task">
                        <tbody>
                            @{
                                foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Name</td>
                                        <td>@user.RegisterTime</td>
                                        <td>
                                            <span class="profile-ava">
                                                <img alt="" class="simple" src="@(user.AvatarPath!=null?user.AvatarPath.UploadPath:"/images/Common/Default/head_portrait.gif")">
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div><br><br>

    </section>
</section>