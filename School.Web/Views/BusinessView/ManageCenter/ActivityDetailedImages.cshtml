@model School.ViewModels.GroupOrganization.ActivityTerms.ActivityTermVM
@using School.Entities.GroupOrganization;
<link href="~/css/managerCenter/information_activityDetailed.css" rel="stylesheet" />
<div>
    <div class="operationDescription">
        <h5 class="title_per title-in"><a href="" id="detailed-activity" data-acId="@Model.ID">活动信息</a> </h5>
        <h5 class="title_per title-in"><a href="" id="detailed-activity-images" data-acId="@Model.ID">活动图片</a></h5>
        <h5 class="title_per title-in"><a href="#" id="detailed-activity-member" data-acId="@Model.ID">活动成员</a></h5>
    </div>
    <div class="ac-info-images clearfix">
        <ul id="activityImages">
            @{
                if (Model.Images.Count() > 0)
                {
                    foreach (var item in Model.Images)
                    {
                        <li>
                            <a href="#" class="ac-image-op">
                                @{
                                    if (Model.User.Id == User.Claims.FirstOrDefault().Value && Model.Status == ActivityStatus.未开始)
                                    {
                                        <i class="fa fa-times delete-activity-image" data-image-Id="@item.ID"></i>
                                    }
                                }
                                <img src="@item.UploadPath" alt="">
                            </a>
                        </li>
                    }
                }
                else if (Model.User.Id != User.Claims.FirstOrDefault().Value )
                {
                    <li>
                        <a href="#" class="ac-image-op">
                            <img src="/images/Common/Default/no_image.png" alt="">
                        </a>
                    </li>
                }
            }
            @if (Model.User.Id == User.Claims.FirstOrDefault().Value && Model.Status == ActivityStatus.未开始)
            {
                <li>
                    <input type="file" class="add-ac-images-file" multiple="multiple" name="name" value="" style="display:none" />
                    <a href="#" class="add-images add-activity-images" id="add-activity-images"><i class="fa fa-plus-circle"></i></a>
                </li>
            }
        </ul>
    </div>
</div>


