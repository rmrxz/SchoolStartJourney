@model School.ViewModels.GroupOrganization.ActivityTerms.ActivityTermInput
<script src="~/js/Common/borain-timeChoice.js"></script>
<div class="activityInfo">
    <form action="#" name="activityForm">
        <input type="hidden" name="ID" value="@Model.ID" />
        <div style="">
            <div class="operationDescription">
                <h5 class="title_per title-in">添加活动</h5>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动名称：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required" name="Name" value="@Model.Name">
                    </div>
                    <span class="input-cue">请填写活动名称</span>
                </div>
            </div>
            @*<div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">负责人：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required" name="UserName" value="@Model.UserName">
                    </div>
                    <span class="input-cue">请填写负责人</span>
                </div>
            </div>*@
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动社团：</label>
                    <div class="operation-box con-color">
                        <select class="input-required AnAssociationNameSelect">
                            @{
                                <option value=""></option>
                                foreach (var item in ViewBag.AnAssociation)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            }
                        </select>
                        <input type="hidden" class="input-required" name="AnAssociationId" value="@Model.AnAssociationId">
                    </div>
                    <span class="input-cue">抢填写活动社团</span>
                </div>
            </div>

            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动地点：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required" name="Address" value="@Model.Address">
                    </div>
                    <span class="input-cue">请填写活动地点</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">报名截止时间：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required signDataTime" name="SignDataTime" placeholder="@Model.SignDataTime" value="@Model.SignDataTime">
                    </div>
                    <span class="input-cue">请填写报名截止时间</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动开始时间：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required startDataTime" name="StartDataTime" placeholder="@Model.StartDataTime" value="@Model.StartDataTime">
                    </div>
                    <span class="input-cue">请选择活动开始时间</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动结束时间：</label>
                    <div class="operation-box con-color">
                        <input type="text" class="input-required endDataTime" name="EndDataTime" placeholder="@Model.StartDataTime" value="@Model.EndDataTime">
                    </div>
                    <span class="input-cue">请选择活动结束时间</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">上限人数：</label>
                    <div class="operation-box con-color">
                        <input type="number" class="input-required" name="MaxNumber" value="@Model.MaxNumber">
                    </div>
                    <span class="input-cue">请填写上限人数</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">个人费用：</label>
                    <div class="operation-box con-color">
                        <input type="number" class="input-required" name="Expenses" value="@Model.Expenses">
                    </div>
                    <span class="input-cue">请填写个人费用</span>
                </div>
            </div>
            <div class="info-height">
                <div class="info-fill-in">
                    <label class="info-label">活动内容：</label>
                    <div class="operation-box con-color">
                        <textarea class="input-required" name="Description" rows="4">@Model.Description</textarea>
                    </div>
                    <span class="input-cue">请填写活动内容</span>
                </div>
            </div>
        </div>
    </form>
    <div class="info-operation-bottom">
        <button class="save-activity">保存</button>
    </div>
</div>
<script>
    //  level分为 YM YMD H HM 四个有效值，分别表示年月 年月日 年月日时 年月日时分,less表示是否不可小于当前时间。年-月-日 时:分 时为24小时制
    //  为确保控件结构只出现一次，在有需要的时候进行一次调用。
    borainTimeChoice({
        start: ".endDataTime",
        end: "",
        level: "HM",
        less: true
    });
    borainTimeChoice({
        start: ".signDataTime",
        end: "",
        level: "HM",
        less: true
    });
    borainTimeChoice({
        start: ".startDataTime",
        end: "",
        level: "HM",
        less: true
    });

</script>