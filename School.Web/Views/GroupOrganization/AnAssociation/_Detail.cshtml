@using School.Entities.GroupOrganization;
@model School.ViewModels.GroupOrganization.AnAssociationVM
@{
    var menber = Model.Members;

}
<!-- container section start -->
<section id="" class="">
    <!--main content start-->
    <!--main content start-->
    <section id="">
        <section class="">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header" style="display:inline-block"><i class="fa fa-user-md"></i>社团详情</h3>
                    <a href="" class="btn btn-success pull-right sc-color anAssociation-list" data-pageIndex="">返回列表</a>
                </div>
            </div>
            <div class="row">
                <!-- profile-widget -->
                <div class="col-lg-12">
                    <div class="profile-widget profile-widget-info">
                        <div class="panel-body">
                            <div class="col-lg-2 col-sm-2">
                                <div class="follow-ava">
                                    <img src="@(Model.Avatar!=null?Model.Avatar.UploadPath:"/images/Common/Default/no_image.png")" )" alt="" style="width: 120px;height:120px">
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 follow-info">
                                <p>@Model.Name</p>
                                <p class="fa fa-map-marker">@Model.SchoolAddress</p>
                                <h6>
                                    <span><i class="icon_clock_alt"></i>@Model.CreateDataTime</span>
                                    <span><i class="fa fa-long-arrow-up"></i>@Model.MaxNumber</span>
                                </h6>
                                <p><i class="fa fa-pencil">@Model.Description</i></p>
                            </div>
                            <div class="col-lg-2 col-sm-6 follow-info weather-category">
                                <ul>
                                    <li class="active">
                                        <i class="fa-2x">@ViewBag.AnManagerNumber</i><br>
                                        管理员
                                    </li>

                                </ul>
                            </div>
                            <div class="col-lg-2 col-sm-6 follow-info weather-category">
                                <ul>
                                    <li class="active">
                                        <i class="fa-2x">@ViewBag.UserNumber</i><br>
                                        社团人数
                                    </li>

                                </ul>
                            </div>
                            <div class="col-lg-2 col-sm-6 follow-info weather-category">
                                <ul>
                                    <li class="active">
                                        <i class=" fa-2x">@ViewBag.ActivityNumber</i><br>
                                        历史活动
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading tab-bg-info">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a data-toggle="tab" href="#recent-activity">
                                        <i class="icon-home"></i>
                                        社团成员
                                    </a>
                                </li>
                                <li>
                                    <a data-toggle="tab" href="#profile">
                                        <i class="icon-user"></i>
                                        社团图片
                                    </a>
                                </li>
                                <li class="activityList">
                                    <a data-toggle="tab" href="#edit-profile">
                                        <i class="icon-envelope"></i>
                                        社团活动
                                    </a>
                                </li>
                            </ul>
                        </header>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div id="recent-activity" class="tab-pane active">
                                    <section class="panel">
                                        <ul class="clearfix" style="margin-top:30px">
                                            @{
                                                if (menber.Count() != 0)
                                                {
                                                    foreach (var item in menber)
                                                    {
                                                        <li class="col-md-2" style="margin-bottom:4px">
                                                            <div class="ac-per-info clearfix">
                                                                <a href="#" class="pull-left ac-image-op image-a">
                                                                    <img src="@(item.User.Avatar != null? item.User.Avatar.UploadPath:"/images/Common/Default/head_portrait.gif")" alt="">
                                                                    <i class="fa fa-times delete-user-friend" data-user-id="@item.User.Id"></i>
                                                                </a>
                                                                <div class="ac-per-info-add">
                                                                    <h4 style="margin: 0;padding:0px">@item.User.Name</h4>
                                                                    <p style="margin: 0;padding:0px">@(item.AnJurisdictionManager == AnJurisdiction.Founder ? "社长" : item.AnJurisdictionManager == AnJurisdiction.Admin ? "管理员" : "社员")</p>
                                                                    <a href="#" class="seeUserDetailed" data_Id="@item.User.Id"><i class="fa fa-plus"></i>查看</a>
                                                                </div>
                                                            </div>
                                                        </li>
                                                    }
                                                }
                                                else
                                                {
                                                    <div style="margin-top:20px">
                                                        <p style="font-size: 20px; margin-left: 30px;">您还没有添加任何好友！！</p>
                                                    </div>
                                                }
                                            }
                                        </ul>
                                    </section>
                                    <section>
                                        <div class="row">
                                        </div>
                                    </section>
                                </div>
                                <div id="profile" class="tab-pane">
                                    <div class="row" style="border-top:1px solid #eee;margin-top:40px;padding:30px">
                                        <ul class="clearfix">
                                            @{
                                                if (Model.Images.Count() > 0)
                                                {
                                                    foreach (var item in Model.Images)
                                                    {
                                                        <li class="pull-left">
                                                            <a href="#" class="ac-image-op" style="display:inline-block;width: 260px;height:240px">
                                                                <i class="fa fa-times delete-anAssociation-image" style="right: 10px;z-index: 9;" data-image-Id="@item.ID"></i>
                                                                <img class="col-md-12" style="height:100%;padding:0 10px" src="@item.UploadPath" alt="">
                                                            </a>
                                                        </li>
                                                    }
                                                }
                                                else
                                                {
                                                    <li>
                                                        <a href="#" class="ac-image-op" style="display:inline-block;width:260px;height:240px">
                                                            <img class="col-md-12" style="height:100% ;padding:0 10px" src="/images/Common/Default/no_image.png" alt="">
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <!-- profile -->
                                <!-- edit-profile -->
                                <div id="edit-profile" class="tab-pane">
                                    <section class="panel">
                                        <div class="panel-body bio-graph-info">
                                            <div class="row" id="an_activityList">
                                               
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
